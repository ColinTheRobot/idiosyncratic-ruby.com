<!doctype html>
<html>
  <head>
    <title>Idiosyncratic Ruby<%= " - #{current_article.title}" %></title>
    <%= partial 'layouts/head' %>
  </head>

  <body>
    <div class="world">
      <section class="post-header">
        <a href="/index/" class="post-logo"><img src="/images/idiosyncratic.png" alt="Idiosyncratic Ruby"></a>
        <h1 class="post-heading" id="top"><a href="/<%= current_article.path[/\d/].to_i %>-<%= current_article.slug %>.html"><%= current_article.title %></a></h1>
      </section>

      <article class="post">
        <%= yield %>
      </article>

      <footer>
        <div class="footer-right">
          By <a href="http://janlelis.com">Jan Lelis</a>
        </div>
        <a href="https://github.com/janlelis/idiosyncratic-ruby.com/commit/<%= current_article.data.commit %>#all_commit_comments">Comments on GitHub</a> |
        <%= current_article.tags.map{ |e| e.capitalize }.join(", ") %> |
        Created: <%= current_article.date.strftime("%Y-%m-%d") %> |
        Updated: <%= ( Date.parse(`git log -1 --format=%cd -- #{__dir__ + "/../#{current_article.path}"}`) rescue current_article.date ).strftime("%Y-%m-%d") %>
      </footer>
    </div>
    <%= javascript_include_tag "rainbow-custom.min" %>
  </body>
</html>